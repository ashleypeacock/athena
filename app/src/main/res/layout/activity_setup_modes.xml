<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_padding="5dp"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="@drawable/curved_white_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Select mode to edit:" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_modes"
        android:spinnerMode="dropdown"
        android:entries="@array/modes_array"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_padding="5dp"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="@drawable/curved_white_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Select trigger:" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_trigger"
            android:spinnerMode="dropdown"
            android:entries="@array/modes_array"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_padding="5dp"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="@drawable/curved_white_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Action to take:" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_action"
            android:spinnerMode="dropdown"
            android:entries="@array/modes_array"
            />

    </LinearLayout>
</LinearLayout>